<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.enquiry.subenquirydetail.SubEnquiryDetailActivity"
    tools:showIn="@layout/activity_sub_enquiry_detail">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/cold"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/circle" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/navigation_line" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/warm"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/circle" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/navigation_line" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/hot"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/circle" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/navigation_line" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/booked"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/circle" />
                        </LinearLayout>

                    </LinearLayout>


                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
            -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:orientation="horizontal">

                            <com.dealermanagmentsystem.utils.ui.DMSTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cold"
                                android:textColor="@color/textSecondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:orientation="horizontal">

                            <com.dealermanagmentsystem.utils.ui.DMSTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Warm"
                                android:textColor="@color/textSecondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:orientation="horizontal">

                            <com.dealermanagmentsystem.utils.ui.DMSTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hot"
                                android:textColor="@color/textSecondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.dealermanagmentsystem.utils.ui.DMSTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Booked"
                                android:textColor="@color/textSecondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!--</LinearLayout>-->
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                        android:id="@+id/partner_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Srinivas Reddy"
                        android:textColor="@color/textPrimary"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:id="@+id/partner_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:text="9739797397"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/edit_enquiry"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_edit"
                            android:tint="@color/textPrimary" />
                    </LinearLayout>


                    <View
                        android:layout_width="100dp"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimaryDark" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="SALES CONSULTANT"
                            android:textColor="@color/textPrimary"
                            android:textSize="11sp" />

                        <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                            android:id="@+id/sales_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Bala Raju"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/navigation_line" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="TEAM NAME"
                            android:textColor="@color/textPrimary"
                            android:textSize="11sp" />

                        <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                            android:id="@+id/team_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Mettuguda"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/navigation_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="FOLLOW UP DATE"
                            android:textColor="@color/textPrimary"
                            android:textSize="11sp" />

                        <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                            android:id="@+id/follow_up_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="01 NOV 2019"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/navigation_line" />


                    <LinearLayout
                        android:id="@+id/ll_quotation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="QUOTATION"
                            android:textColor="@color/textPrimary"
                            android:textSize="11sp" />

                        <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                            android:id="@+id/quotation_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="2"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/navigation_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="MODEL"
                            android:textColor="@color/textPrimary"
                            android:textSize="11sp" />

                        <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                            android:id="@+id/model_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Creta"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/navigation_line" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="VARIANT"
                            android:textColor="@color/textPrimary"
                            android:textSize="11sp" />

                        <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                            android:id="@+id/variant_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="CRDI SX"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/navigation_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="COLOR"
                            android:textColor="@color/textPrimary"
                            android:textSize="11sp" />

                        <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                            android:id="@+id/color_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Polar White"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/navigation_line" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="SOURCE"
                            android:textColor="@color/textPrimary"
                            android:textSize="11sp" />

                        <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                            android:id="@+id/source_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Mail"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/navigation_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/won"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_line_solid"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_thumbs_up"
                                android:tint="@color/ic_color" />

                            <com.dealermanagmentsystem.utils.ui.DMSTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="WON"
                                android:textColor="@color/textPrimary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lost"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_line_solid"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_thumbs_down"
                                android:tint="@color/ic_color" />

                            <com.dealermanagmentsystem.utils.ui.DMSTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="LOST"

                                android:textColor="@color/textPrimary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tasks"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_line_solid"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/task_icon_small"
                                android:tint="@color/ic_color" />

                            <com.dealermanagmentsystem.utils.ui.DMSTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="TASKS"
                                android:textColor="@color/textPrimary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/move_to"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_line_solid"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_move_to1"
                                android:tint="@color/ic_color" />

                            <com.dealermanagmentsystem.utils.ui.DMSTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="MOVE TO"
                                android:textColor="@color/textPrimary"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <com.dealermanagmentsystem.utils.ui.DMSButton
                        android:id="@+id/create_quotation"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_purple"
                        android:text="Create Quotation"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>