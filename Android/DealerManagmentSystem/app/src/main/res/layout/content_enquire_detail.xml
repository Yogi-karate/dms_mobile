<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.enquiry.enquirycreate.CreateEnquiryActivity"
    tools:showIn="@layout/activity_create_enquiry">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Enquiry"
                        android:textColor="@color/textPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_types"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_line"
                        android:editable="false"
                        android:hint="Types"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textSize="16sp" />

                    <com.dealermanagmentsystem.utils.ui.DMSAutoCompleteTextView
                        android:id="@+id/et_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_line"
                        android:hint="Product"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textSize="16sp" />

                    <com.dealermanagmentsystem.utils.ui.DMSTextView
                        android:id="@+id/et_follow_up_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_line"
                        android:editable="false"
                        android:hint="Follow-up Date"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Customer"
                        android:textColor="@color/textPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_line"
                        android:hint="Name"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textSize="16sp" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_line"
                        android:hint="Mobile"
                        android:inputType="phone"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textSize="16sp" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_line"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Marketing"
                        android:textColor="@color/textPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.dealermanagmentsystem.utils.ui.DMSAutoCompleteTextView
                        android:id="@+id/et_source"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_line"
                        android:hint="Source"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Test Drive"
                        android:textColor="@color/textPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.dealermanagmentsystem.utils.ui.DMSCheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="Test Drive"
                        android:padding="15dp"
                        android:textColor="@color/textPrimary" />

                    <com.dealermanagmentsystem.utils.ui.DMSTextView
                        android:id="@+id/et_test_drive_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border_line"
                        android:editable="false"
                        android:hint="Test Drive Date"
                        android:padding="15dp"
                        android:visibility="gone"
                        android:textColor="@color/textSecondary"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ll_details_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Details"
                        android:textColor="@color/textPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:id="@+id/txt_vehicle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_vehicle"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Vehicle"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:id="@+id/txt_finance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_finance"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Finance"
                            android:textColor="@color/white"
                            android:visibility="gone" />

                        <com.dealermanagmentsystem.utils.ui.DMSTextView
                            android:id="@+id/txt_insurance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_insurance"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Insurance"
                            android:textColor="@color/white"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.dealermanagmentsystem.utils.ui.DMSButton
                android:id="@+id/submit_enquiry"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="16dp"
                android:background="@drawable/btn_purple_rounded"
                android:drawableRight="@drawable/button_sigin_purple"
                android:padding="10dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>