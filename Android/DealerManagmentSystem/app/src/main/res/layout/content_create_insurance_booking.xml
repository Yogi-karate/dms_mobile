<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.insurance.create.InsuranceCreateBookingActivity"
    tools:showIn="@layout/activity_insurance_create_booking">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_previous_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="visible"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/card_bg"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Previous Insurance Details"
                        android:textColor="@color/textPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_previous_idv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:hint="IDV"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_previous_ncb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:hint="NCB"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />


                    <Spinner
                        android:id="@+id/sp_previous_insurance_company"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line_icon"
                        android:hint="Insurance Company" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:hint="Discount"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/sp_previous_nil_dip"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line_icon"
                        android:hint="NIL-DIP/Comprehensive" />

                    <com.dealermanagmentsystem.utils.ui.DMSTextView
                        android:id="@+id/et_previous_due_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:editable="false"
                        android:hint="Insurance Due date"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_previous_final_premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:hint="Final Premium"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_previous_policy_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:hint="Policy No"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_current_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/card_bg"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <com.dealermanagmentsystem.utils.ui.DMSTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:padding="15dp"
                        android:text="Current Insurance Details"
                        android:textColor="@color/textPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_current_idv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:hint="IDV"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_current_ncb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:hint="NCB"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />


                    <Spinner
                        android:id="@+id/sp_current_insurance_company"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line_icon"
                        android:hint="Insurance Company" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_alternate_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:hint="Alternate Number"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/sp_current_nil_dip"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line_icon"
                        android:hint="NIL-DIP/Comprehensive" />

                    <com.dealermanagmentsystem.utils.ui.DMSTextView
                        android:id="@+id/et_current_due_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:editable="false"
                        android:hint="Current Insurance Due date"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_current_final_premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:hint="Final Premium"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/sp_booking_type"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line_icon"
                        android:hint="Booking Type" />

                    <com.dealermanagmentsystem.utils.ui.DMSTextView
                        android:id="@+id/et_pick_up_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:editable="false"
                        android:hint="Appointment date and time"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                    <com.dealermanagmentsystem.utils.ui.DMSEditText
                        android:id="@+id/et_pick_up_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/border_line"
                        android:hint="Pick up address"
                        android:padding="15dp"
                        android:textColor="@color/textSecondary"
                        android:textColorHint="@color/textSecondary"
                        android:textSize="16sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.dealermanagmentsystem.utils.ui.DMSButton
                android:id="@+id/submit_booking"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="16dp"
                android:background="@drawable/btn_purple_rounded"
                android:drawableRight="@drawable/button_sigin_purple"
                android:padding="10dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>